.chat-main__message
  .chat-main__message--top
    .chat-main__message--name
      = message.user.name
    .chat-main__message--date-and-time
      = l message.created_at, format: :long
  .chat-main__message--bottom
    = message.body if message.body.present?
    %br
    = image_tag message.image.url if message.image.present?
